
@{
    ViewBag.Title = "ProductList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


   
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">List of products</h3>
        </div>
        <div class="box-body">
            <table id="example1" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Calories</th>
                        <th>Fat</th>
                        <th>Carbs</th>
                        <th>Protein</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pozycja in Model)
                    {
                        <tr>
                            <td>@pozycja.Name</td>
                            <td>@pozycja.Calories</td>
                            <td>@pozycja.Fat</td>
                            <td>@pozycja.Carbs</td>
                            <td>@pozycja.Protein</td>
                            <td><a class="ion-android-delete" data-id="@pozycja.ProductId" href="#">Delete</a></td>
                        </tr>
                    }
             
                </tbody>
                <tfoot>
                    <tr>
                        <th>Name</th>
                        <th>Calories</th>
                        <th>Fat</th>
                        <th>Carbs</th>
                        <th>Protein</th>
                        <th>Delete</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>

